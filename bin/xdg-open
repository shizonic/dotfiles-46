#!/bin/bash
#
# opener
[[ -z $1 || ! -e $1 ]] &&
    exit 1

mime_type="$(file -biL "$1")"

case "$mime_type" in
    text/*|*/xml)
        "${VISUAL:-${EDITOR:-vi}}" "$1"
    ;;

    image/*)
        feh "$1"
        ;;

    video/*)
        mpv "$1"
        ;;

    audio/*)
        mpv "$1"
        ;;

    application/pdf*)
        "${BROWSER:-firefox}" "$1"
        ;;

    *opendocument*|*openxmlformats*)
        libreoffice "$1"
        ;;

    *)
        printf '%s\n' "warn: No program defined for $mime_type"
        ;;
esac
